@model IEnumerable<BankSystem.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Przelewy</h1>

<p>
    <a  class="btn btn-primary " asp-action="Create" asp-route-id="@Context.GetRouteValue("id")">Zrób Przelew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestAccount)
            </td>
            <td>
                <a  class="btn btn-primary " asp-action="Details" asp-route-id="@item.TransactionID">Szczegóły</a> |
                <a   class="btn btn-primary " asp-action="Delete" asp-route-id="@item.TransactionID">Usuń</a>
            </td>
        </tr>
}<div>
    <a  class="btn btn-primary " asp-controller="Account" asp-action="Index">Powrót</a>
</div>
    </tbody>
</table>
